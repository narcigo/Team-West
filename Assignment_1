import numpy as np
a = [1,2,3,4]
c = [2,3,4]
e = [2,3,4]
v = [1,2,3,4]
n = 4
f = np.array([])
def multiple(n):
global x
x = [ e[n-2] * v[0] + a[n-1] * v[1] + c[n-1] * v[2] ]
for i in range(1,n+1):
if i == 1:
x = [ a[0] * v[0] + c[0] * v[1] ]
elif i == n:
x = [ e[n-2] * v[0] + a[n-1] * v[2] ]
else:
multiple(i)
print(np.append(f,x))
